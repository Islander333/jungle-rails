<tr>
  <td>
    <%= image_tag line_item.product.image.tiny.url %>
  </td>
  <td>
    <h4><%= line_item.product.name %></h4>
    <br>
    <p><%= line_item.product.description %></p>
  </td>
  <td>
    <%= humanized_money_with_symbol line_item.item_price %> <!-- Display the price per item -->
  </td>
  <td>
    <%= line_item.quantity %> <!-- Display the quantity -->
  </td>
  <td>
    <%= humanized_money_with_symbol line_item.total_price %> <!-- Display total price for this line item -->
  </td>
</tr>